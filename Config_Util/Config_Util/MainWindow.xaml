<Window x:Class="Config_Util.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Config_Util"
        mc:Ignorable="d"
        Title="Config Utility" Height="303.205" Width="694.447" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="509*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="LoadFilesButton" Content="Load CMMS Catalogue" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Width="151" Height="32" Click="LoadFilesButton_Click"/>
        <Button x:Name="EditButton" Content="Edit Connection Data" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="151" Height="32" IsEnabled="False"/>
        <Button x:Name="ListFilesButton" Content="List Files to Modify" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="151" Height="32" IsEnabled="False"/>
        <Button x:Name="LoadDBButton" Content="Load Database Module" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="151" Height="32" IsEnabled="False"/>
        <Button x:Name="RunButton" Content="Run Application" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="151" Height="32" IsEnabled="False"/>
        <TextBox x:Name="CMMSPath" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="130,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="359" RenderTransformOrigin="0.5,0.5" FontSize="18" ToolTip="Paste CMMS Path here then hit the Load button" />
        <Label x:Name="label" Content="CMMS Path:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="16"/>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Height="388" Margin="166,10,0,0" VerticalAlignment="Top" Width="5" Cursor="Arrow"/>
        <TextBox x:Name="AddressBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="130,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="18" Visibility="Collapsed"/>
        <TextBox x:Name="NameBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="130,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="18" Visibility="Collapsed"/>
        <TextBox x:Name="LoginBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="130,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="18" Visibility="Collapsed"/>
        <TextBox x:Name="PasswordBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="130,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="18" Visibility="Collapsed"/>
        <TextBox x:Name="VersionBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="130,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="18" Visibility="Collapsed"/>
        <Label x:Name="AddressLabel" Content="DB Address:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="16" Visibility="Collapsed"/>
        <Label x:Name="NameLabel" Content="DB Name:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="16" Visibility="Collapsed"/>
        <Label x:Name="LoginLabel" Content="DB Login:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="16" Visibility="Collapsed"/>
        <Label x:Name="PasswordLabel" Content="DB Password:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="16" Visibility="Collapsed"/>
        <Label x:Name="VersionLabel" Content="Client Version:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="16" Visibility="Collapsed"/>
    </Grid>
</Window>
